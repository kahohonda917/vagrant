<div class="book_top">

	<h1>Books</h1>
	<table>
		<tr>
			<td>Title</td>
			<td>Body</td>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete, data:{confirm:'削除しますか？'} %></td>
		</tr>
		<% end %>
	</table>
</div>




<h1>NEW BOOK</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>body</h4>
	<%= f.text_area :body%>

	<%= f.submit 'Create Book'%>

<% end %>



